<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92EBBA"
    tools:context=".Navigation">

    <!-- Thanh tìm kiếm -->
    <LinearLayout
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/background_search"
        android:drawablePadding="8dp"
        android:orientation="horizontal"
        android:textSize="16sp"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!-- Thanh tìm kiếm -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/background_search"
            android:drawablePadding="8dp"
            android:hint="   Tìm kiếm..."
            app:layout_constraintHorizontal_weight="7" />
        <Button
            android:id="@+id/btnTim"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btntim"
            android:drawableLeft="@drawable/search_25dp_e8eaed_fill0_wght400_grad0_opsz24"
            />
    </LinearLayout>

    <!-- Spinner để chọn nguồn dữ liệu -->
    <Spinner
        android:id="@+id/source_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="end"
        android:entries="@array/source_options"
        android:background="@drawable/spiner_background"
        android:padding="10dp"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line"
        android:gravity="right"
        android:layout_marginRight="16dp"/>



    <!-- Danh sách công việc -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/job_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/source_spinner"
        app:layout_constraintVertical_bias="1.0" /> <!-- Thêm màu nền trắng -->


</androidx.constraintlayout.widget.ConstraintLayout>
