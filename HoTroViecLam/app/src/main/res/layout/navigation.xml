<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Navigation">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nav_buttom" />
    <!--    Trên thư mục cha của Mainactivity->new->Fragment->(blank)-->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_buttom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/nav_buttom"
        app:itemTextColor="@color/navigation"
        app:itemIconTint="@color/navigation"
        app:labelVisibilityMode="labeled"
        />

</RelativeLayout>