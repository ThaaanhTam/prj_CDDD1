<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context=".Fragment.Child_Fragment.InfoFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp"

    android:background="@drawable/customborderlinearlayout_gioithieu">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin cá nhân"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/edit_ttcn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/editprofile"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:backgroundTint="#D9D9D9"
        android:layout_marginBottom="20dp"
        android:background="@drawable/customborderlinearlayout_gioithieu"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_date_range_24"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#776D6D"
                android:layout_height="wrap_content"
                android:text="Ngày sinh"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="07/03/2003"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:backgroundTint="#D9D9D9"
        android:layout_marginBottom="20dp"
        android:background="@drawable/customborderlinearlayout_gioithieu"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/account_circle_50dp_000000_fill0_wght400_grad0_opsz48"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="#776D6D"
                android:layout_height="wrap_content"
                android:text="Giới tính"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Nữ"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:padding="8dp"
    android:backgroundTint="#D9D9D9"
    android:layout_marginBottom="20dp"
    android:background="@drawable/customborderlinearlayout_gioithieu"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/contact_mail"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#776D6D"
            android:layout_height="wrap_content"
            android:text="Email"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Thanhtam@gmail.com"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:padding="8dp"
    android:backgroundTint="#D9D9D9"
    android:layout_marginBottom="20dp"
    android:background="@drawable/customborderlinearlayout_gioithieu"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/phonecontact"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#776D6D"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="07/03/2003"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:padding="8dp"
    android:backgroundTint="#D9D9D9"
    android:layout_marginBottom="20dp"
    android:background="@drawable/customborderlinearlayout_gioithieu"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/address"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#776D6D"
            android:layout_height="wrap_content"
            android:text="Điạ chỉ"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Quận 9, TP.HCM"/>
    </LinearLayout>
</LinearLayout>
</LinearLayout>

</LinearLayout>