<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Fragment.Child_Fragment.GioiThieuFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customborderlinearlayout_gioithieu"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Giới Thiệu bản thân"
                android:textAlignment="center"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/editprofile" />
        </LinearLayout>

        <TextView
            android:id="@+id/gioithiebanthan"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            android:text="Chưa có thông tin giới thiệu bản thân"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnCapnhatProfile"
            android:layout_width="wrap_content"
            android:backgroundTint="#D9D9D9"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Thêm thông tin giới thiệu bản thân" />

    </LinearLayout>


</LinearLayout>