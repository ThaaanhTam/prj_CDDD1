<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:backgroundTint="@color/white"
    android:elevation="4dp"
    app:cardCornerRadius="10dp"
    android:radius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <!-- Title: Label and Value Pair -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/tvTitleValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Title"
                android:fontFamily="@font/poppins_black"
                android:textColor="@color/green_active"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Salary: Label and Value Pair -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingBottom="8dp">

            <!-- Label TextView -->
            <TextView
                android:id="@+id/tvSalaryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mức lương"

                android:textColor="@color/green_light"
                android:textSize="16sp"
                android:layout_weight="1" /> <!-- Chiếm phần không gian còn lại -->

            <!-- Value TextView -->
            <TextView
                android:id="@+id/tvSalaryValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000 tr"
                android:textColor="@color/green_light"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Status: Label and Value Pair -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <!-- Label TextView -->
            <TextView
                android:id="@+id/tvStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái:"
                android:textColor="@color/green_active"
                android:textSize="16sp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tvStatusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="@color/green_active"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Button Cancel -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/red_cancel"
            android:paddingStart="16dp"
            android:paddingTop="12dp"
            android:paddingEnd="16dp"
            android:paddingBottom="12dp"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:text="Hủy"
            android:textColor="@android:color/white" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
